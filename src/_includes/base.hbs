  <head>
    <title>{{ title }} ({{ root-title }})</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/0514044dbd.js" crossorigin="anonymous"></script>
    <style>{{> partials/stylesheet }}</style>
    <script>
      {{> partials/script }}
